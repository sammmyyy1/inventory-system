<!DOCTYPE html>
<html>
<head>
    <title>Inventory</title>
</head>
<body>
<h2>Inventory Dashboard</h2>
<a href="/inventory/add">Add New Product</a>
<table border="1" cellpadding="5">
    <thead>
    <tr>
        <th>Name</th>
        <th>SKU</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Supplier</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% products.forEach(product => { %>
        <tr>
            <td><%= product.name %></td>
            <td><%= product.sku %></td>
            <td><%= product.quantity %></td>
            <td>$<%= product.price %></td>
            <td><%= product.supplier %></td>
            <td>
                <a href="/inventory/edit/<%= product._id %>">Edit</a> |
                <a href="/inventory/delete/<%= product._id %>">Delete</a>
            </td>
        </tr>
    <% }) %>
    </tbody>
</table>
</body>
</html>
